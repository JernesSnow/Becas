@{

    ViewData["Title"] = "Acceso Denegado";

}

<div class="container">
    <div class="row justify-content-center align-items-center" style="min-height: 70vh;">
        <div class="col-lg-6 col-md-8">
            <div class="card border-0 shadow-lg">
                <div class="card-body text-center p-5">
                    <div class="mb-4">
                        <div class="bg-danger bg-opacity-10 rounded-circle d-inline-flex align-items-center justify-content-center"
                             style="width: 100px; height: 100px;">
                            <i class="bi bi-shield-lock-fill text-danger" style="font-size: 3rem;"></i>
                        </div>
                    </div>

                    <h1 class="display-5 fw-bold text-danger mb-3">

                        Acceso Denegado
                    </h1>

                    <p class="lead text-muted mb-4">

                        No tienes permisos para acceder a esta página.
                    </p>

                    <div class="alert alert-warning text-start" role="alert">
                        <h6 class="alert-heading">
                            <i class="bi bi-info-circle-fill me-2"></i>¿Por qué veo este mensaje?
                        </h6>
                        <hr>
                        <ul class="mb-0 small">
                            <li>Tu rol de usuario no tiene los permisos necesarios</li>
                            <li>Esta acción está restringida a ciertos roles (Coordinador, Profesor)</li>
                            <li>Es posible que necesites iniciar sesión con otra cuenta</li>
                        </ul>
                    </div>

                    @if (User.Identity?.IsAuthenticated == true)

                    {
                        <div class="card bg-light mb-4">
                            <div class="card-body">
                                <h6 class="card-title mb-2">
                                    <i class="bi bi-person-circle me-2"></i>Información de tu sesión
                                </h6>
                                <p class="card-text mb-0">
                                    <strong>Usuario:</strong> @User.Identity.Name<br>
                                    <strong>Roles:</strong>

                                    @{

                                        var roles = User.Claims.Where(c => c.Type == System.Security.Claims.ClaimTypes.Role)

                                        .Select(c => c.Value)

                                        .ToList();

                                        if (roles.Any())

                                        {

                                            foreach (var role in roles)

                                            {
                                                <span class="badge bg-primary me-1">@role</span>

                                            }

                                        }

                                        else

                                        {
                                            <span class="text-muted">Sin roles asignados</span>

                                        }

                                    }
                                </p>
                            </div>
                        </div>

                    }

                    <div class="d-grid gap-2 d-sm-flex justify-content-sm-center">
                        <a href="@Url.Action("Index", "Home")" class="btn btn-primary btn-lg px-4">
                            <i class="bi bi-house-fill me-2"></i>Ir al Inicio
                        </a>

                        @if (User.Identity?.IsAuthenticated == true)

                        {
                            <form asp-controller="Account" asp-action="Logout" method="post" class="d-inline">

                                @Html.AntiForgeryToken()
                                <button type="submit" class="btn btn-outline-secondary btn-lg px-4">
                                    <i class="bi bi-box-arrow-right me-2"></i>Cerrar Sesión
                                </button>
                            </form>

                        }

                        else

                        {
                            <a href="@Url.Action("Login", "Account")" class="btn btn-outline-secondary btn-lg px-4">
                                <i class="bi bi-box-arrow-in-right me-2"></i>Iniciar Sesión
                            </a>

                        }
                    </div>

                    <div class="mt-4 pt-4 border-top">
                        <h6 class="text-muted mb-3">
                            <i class="bi bi-question-circle me-2"></i>¿Necesitas ayuda?
                        </h6>
                        <p class="small text-muted mb-0">

                            Si crees que esto es un error o necesitas acceso a esta funcionalidad,<br>

                            contacta al administrador del sistema o al coordinador de becas.
                        </p>
                    </div>
                </div>
            </div>
            <div class="card border-0 shadow-sm mt-4">
                <div class="card-header bg-light">
                    <h6 class="mb-0">
                        <i class="bi bi-shield-check me-2"></i>Permisos del Sistema
                    </h6>
                </div>
                <div class="card-body p-0">
                    <div class="table-responsive">
                        <table class="table table-sm mb-0">
                            <thead>
                                <tr>
                                    <th>Acción</th>
                                    <th class="text-center">Estudiante</th>
                                    <th class="text-center">Profesor</th>
                                    <th class="text-center">Coordinador</th>
                                    <th class="text-center">Admin</th>
                                </tr>
                            </thead>
                            <tbody>
                                <tr>
                                    <td><small>Crear solicitudes</small></td>
                                    <td class="text-center"><i class="bi bi-check-circle-fill text-success"></i></td>
                                    <td class="text-center"><i class="bi bi-x-circle-fill text-danger"></i></td>
                                    <td class="text-center"><i class="bi bi-x-circle-fill text-danger"></i></td>
                                    <td class="text-center"><i class="bi bi-check-circle-fill text-success"></i></td>
                                </tr>
                                <tr>
                                    <td><small>Ver lista de solicitudes</small></td>
                                    <td class="text-center"><i class="bi bi-x-circle-fill text-danger"></i></td>
                                    <td class="text-center"><i class="bi bi-check-circle-fill text-success"></i></td>
                                    <td class="text-center"><i class="bi bi-check-circle-fill text-success"></i></td>
                                    <td class="text-center"><i class="bi bi-check-circle-fill text-success"></i></td>
                                </tr>
                                <tr>
                                    <td><small>Gestionar roles</small></td>
                                    <td class="text-center"><i class="bi bi-x-circle-fill text-danger"></i></td>
                                    <td class="text-center"><i class="bi bi-x-circle-fill text-danger"></i></td>
                                    <td class="text-center"><i class="bi bi-x-circle-fill text-danger"></i></td>
                                    <td class="text-center"><i class="bi bi-check-circle-fill text-success"></i></td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

