@using Microsoft.AspNetCore.Mvc.Rendering
@model Becas.Models.SolicitudBeca
@{

    ViewData["Title"] = "Sistema de Becas";

    var isAuthenticated = User.Identity?.IsAuthenticated ?? false;

    var isEstudiante = User.IsInRole("Estudiante");

    var isProfesor = User.IsInRole("Profesor");

    var isCoordinador = User.IsInRole("Coordinador");

}

<div class="hero-section text-center text-white py-5 mb-5" style="background: linear-gradient(135deg, #667eea 0%, #764ba2 100%); border-radius: 20px; box-shadow: 0 10px 30px rgba(0,0,0,0.2);">
    <div class="container py-4">
        <h1 class="display-4 fw-bold mb-3">
            <i class="bi bi-building me-3"></i>Liceo Experimental Bilingüe José Figueres Ferrer
        </h1>
        <p class="lead fs-4 mb-4">Sistema de Gestión de Becas del Comedor</p>

        @if (!isAuthenticated)

        {
            <a href="@Url.Action("Login", "Account")" class="btn btn-light btn-lg px-5 shadow">
                <i class="bi bi-box-arrow-in-right me-2"></i>Iniciar Sesión
            </a>

        }

        else

        {
            <div class="alert alert-light d-inline-block shadow-sm">
                <i class="bi bi-person-circle me-2"></i>
                <strong>Bienvenido, @User.Identity?.Name</strong>

                @if (isEstudiante)

                {
                    <span class="badge bg-success ms-2">Estudiante</span>

                }

                else if (isProfesor)

                {
                    <span class="badge bg-primary ms-2">Profesor</span>

                }

                else if (isCoordinador)

                {
                    <span class="badge bg-info ms-2">Coordinador</span>

                }
            </div>

        }
    </div>
</div>

<div class="container">

    @if (!isAuthenticated)

    {
        <!-- Vista para usuarios que no se han autenticado -->
        <div class="row g-4">
            <div class="col-md-4">
                <div class="card h-100 border-0 shadow-sm">
                    <div class="card-body text-center p-4">
                        <div class="mb-3">
                            <i class="bi bi-file-earmark-text text-primary" style="font-size: 3rem;"></i>
                        </div>
                        <h5 class="card-title">Solicitar Beca</h5>
                        <p class="card-text text-muted">

                            Los estudiantes pueden aplicar al programa de becas del comedor escolar.
                        </p>
                    </div>
                </div>
            </div>

            <div class="col-md-4">
                <div class="card h-100 border-0 shadow-sm">
                    <div class="card-body text-center p-4">
                        <div class="mb-3">
                            <i class="bi bi-clipboard-check text-success" style="font-size: 3rem;"></i>
                        </div>
                        <h5 class="card-title">Revisar Solicitudes</h5>
                        <p class="card-text text-muted">

                            Profesores y coordinadores pueden revisar las solicitudes recibidas.
                        </p>
                    </div>
                </div>
            </div>

            <div class="col-md-4">
                <div class="card h-100 border-0 shadow-sm">
                    <div class="card-body text-center p-4">
                        <div class="mb-3">
                            <i class="bi bi-shield-check text-info" style="font-size: 3rem;"></i>
                        </div>
                        <h5 class="card-title">Sistema Seguro</h5>
                        <p class="card-text text-muted">

                            Acceso controlado mediante autenticación y roles de usuario.
                        </p>
                    </div>
                </div>
            </div>
        </div>

        <div class="text-center mt-5">
            <p class="lead">¿Listo para comenzar?</p>
            <a href="@Url.Action("Login", "Account")" class="btn btn-primary btn-lg">
                <i class="bi bi-box-arrow-in-right me-2"></i>Ingresar al Sistema
            </a>
        </div>

    }

    else if (isEstudiante)

    {
        <!-- Vista para los estudiantes -->
        <div class="row">
            <div class="col-lg-8 mx-auto">
                <div class="card border-0 shadow-lg">
                    <div class="card-body p-5 text-center">
                        <div class="mb-4">
                            <i class="bi bi-person-check-fill text-success" style="font-size: 4rem;"></i>
                        </div>
                        <h2 class="mb-3">Panel de Estudiante</h2>
                        <p class="lead text-muted mb-4">

                            Desde aquí puedes solicitar tu beca para el comedor escolar.
                        </p>

                        <div class="alert alert-info text-start">
                            <h6 class="alert-heading">
                                <i class="bi bi-info-circle-fill me-2"></i>Información importante
                            </h6>
                            <ul class="mb-0">
                                <li>Completa todos los campos del formulario</li>
                                <li>Proporciona información veraz y detallada</li>
                                <li>Tu solicitud será revisada por el personal autorizado</li>
                            </ul>
                        </div>

                        <div class="d-grid gap-2 mt-4">
                            <a href="@Url.Action("Create", "Beca")" class="btn btn-primary btn-lg">
                                <i class="bi bi-plus-circle me-2"></i>Crear Nueva Solicitud
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>

    }

    else if (isProfesor || isCoordinador)

    {
        <!-- Vista para los profesores y coordinadores -->
        <div class="row">
            <div class="col-lg-8 mx-auto">
                <div class="card border-0 shadow-lg">
                    <div class="card-body p-5 text-center">
                        <div class="mb-4">
                            <i class="bi bi-clipboard-data-fill text-primary" style="font-size: 4rem;"></i>
                        </div>
                        <h2 class="mb-3">Panel de @(isCoordinador ? "Coordinador" : "Profesor")</h2>
                        <p class="lead text-muted mb-4">

                            Acceso a la revisión y gestión de solicitudes de becas.
                        </p>

                        <div class="alert alert-success text-start">
                            <h6 class="alert-heading">
                                <i class="bi bi-check-circle-fill me-2"></i>Tus permisos
                            </h6>
                            <ul class="mb-0">
                                <li>Ver todas las solicitudes registradas</li>
                                <li>Revisar información detallada de cada solicitud</li>
                                <li>Acceso completo a la base de datos de solicitudes</li>
                            </ul>
                        </div>

                        <div class="d-grid gap-2 mt-4">
                            <a href="@Url.Action("ListaSolicitudes", "Beca")" class="btn btn-primary btn-lg">
                                <i class="bi bi-list-ul me-2"></i>Ver Lista de Solicitudes
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>

    }
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script src="~/js/beca-validation.js" asp-append-version="true"></script>

}
