@model Becas.Models.SolicitudBeca
@using Microsoft.AspNetCore.Mvc.Rendering

@{
    ViewData["Title"] = "Solicitud de Beca";
}

<div class="beca-container">

    <div class="beca-header text-center text-white py-4 mb-4 shadow-sm">
        <h1 class="mb-1 fw-bold">Liceo Experimental Bilingüe José Figueres Ferrer</h1>
        <p class="lead mb-0 opacity-75">Gestión de Becas del Comedor</p>
    </div>

    <div class="beca-form-wrapper mx-auto">

        @if (TempData["Mensaje"] != null)
        {
            <div id="mensajeExito" class="alert alert-success shadow-sm" role="alert">
                @TempData["Mensaje"]
            </div>
        }

        <div class="card beca-card shadow-lg border-0">
            <div class="card-header bg-gradient-primary text-white">
                <h4 class="mb-0 fw-semibold">Formulario de Solicitud</h4>
            </div>

            <div class="card-body p-4">

                @using (Html.BeginForm("Create", "Beca", FormMethod.Post, new { @class = "needs-validation", novalidate = "novalidate", id = "formBeca" }))
                {
                    @Html.AntiForgeryToken()
                    @Html.ValidationSummary(true, "Por favor revise los siguientes errores:", new { @class = "text-danger mb-3" })

                    <div class="row g-3">

                        <div class="col-md-6">
                            @Html.LabelFor(m => m.NombreEstudiante, new { @class = "form-label fw-semibold" })
                            @Html.TextBoxFor(m => m.NombreEstudiante, new { @class = "form-control beca-input", placeholder = "Nombre completo" })
                            @Html.ValidationMessageFor(m => m.NombreEstudiante, null, new { @class = "text-danger" })
                        </div>

                        <div class="col-md-6">
                            @Html.LabelFor(m => m.Cedula, new { @class = "form-label fw-semibold" })
                            @Html.TextBoxFor(m => m.Cedula, new { @class = "form-control beca-input", placeholder = "Ejemplo: 123456789", maxlength = 9, inputmode = "numeric" })
                            @Html.ValidationMessageFor(m => m.Cedula, null, new { @class = "text-danger" })
                        </div>

                        <div class="col-md-6">
                            @Html.LabelFor(m => m.Canton, new { @class = "form-label fw-semibold" })
                            @Html.DropDownListFor(
                            m => m.Canton,
                                                new SelectList((IEnumerable<string>)ViewBag.Cantones),
                                                "Seleccione un cantón",
                                                new { @class = "form-select beca-input" }
                                                )
                        @Html.ValidationMessageFor(m => m.Canton, null, new { @class = "text-danger" })
                    </div>

                    <div class="col-md-6 d-flex align-items-center mt-4">
                        <div class="form-check">
                            @Html.CheckBoxFor(m => m.TuvoBecaAnterior, new { @class = "form-check-input beca-check" })
                            @Html.LabelFor(m => m.TuvoBecaAnterior, new { @class = "form-check-label fw-semibold ms-1" })
                        </div>
                    </div>

                    <div class="col-12">
                        @Html.LabelFor(m => m.Detalle, new { @class = "form-label fw-semibold" })
                        @Html.TextAreaFor(m => m.Detalle, 6, 50, new { @class = "form-control beca-input", placeholder = "Describa la situación socioeconómica..." })
                        @Html.ValidationMessageFor(m => m.Detalle, null, new { @class = "text-danger" })
                    </div>

                </div>

                <div class="d-flex gap-3 mt-4">
                    <button type="submit" class="btn btn-primary beca-btn">Enviar Solicitud</button>
                    <a class="btn btn-outline-secondary beca-btn" href="@Url.Action("ListaSolicitudes", "Beca")">Ver Solicitudes</a>
                    <a class="btn btn-outline-info beca-btn" href="@Url.Action("Ejemplos", "Beca")">Ver Ejemplos</a>
                </div>

                                }
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script src="~/js/beca-validation.js" asp-append-version="true"></script>
}